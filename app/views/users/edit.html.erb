<%= form_with model: @user do |f| %>
<div>
  <label>Name</label>
  <%= f.text_field :name, autofocus: true %>
  <label>Image</label>
  <%= f.file_field :profile_image, accept: "image/*" %>
  <label>Introduction</label>
  <%= f.text_area :introduction %>
  <%= f.submit "Update User" ,class: "btn btn-secondary" %>
</div>
<% end %>