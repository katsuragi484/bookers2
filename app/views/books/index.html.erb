<%= render 'books/list', book: @book %>
<h2>Books</h2>

  <tr>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  <th></th>
  </tr>

<% @books.each do |book|%>

  <tr>
    <td>
      <%= image_tag book.user.get_profile_image(100,100) %>
    </td>
    <td>
      <%= link_to book_path(book.id) do %>
        <%= book.user.name %>
      <% end %>
    </td>
    <td>
      <%= book.title %>
    </td>
    <td>
      <%= book.body %>
    </td>
  </tr>
<% end %>