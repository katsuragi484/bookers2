<h2>User info</h2>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <th>name</th>
  <th><%= current_user.name %></th>
  <th>introduction</th>
  <th><%= current_user.introduction %></th>
<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <label>Title</label>
    <%= f.text_field :title %>
    <label>Opinion</label>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
<h2>Books</h2>

