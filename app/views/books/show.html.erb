<%= render 'books/list', book: @book %>

<h2>Book detail</h2>
  <td>
    <%= image_tag @book.user.get_profile_image(100,100) %>
    <%= @book.user.name %>
  </td>

  <tr>
  <td><%= @book.title %></td>
  <td><%= @book.body %></td>
  <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
  <td><%= link_to "Destroy", book_path(@book.id), method: :delete,"data-confirm" => "本当に削除しますか?" %></td>
  </tr>
